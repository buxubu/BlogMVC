@model BlogMVC.Models.Category

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Details</h2>
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="normal-table-list mg-t-30">
            <div class="bsc-tbl-cls">
                <table class="table table-cl">
                    <thead>
                        <tr>
                            <th>Cate Name</th>
                            <th>Published</th>
                            <th>Thumb</th>
                            <th>Icon</th>
                            <th>Cover</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Html.DisplayFor(model => model.CatName)</td>
                            <td>
                                @if (Model.Published == true)
                                {
                                    <span class="badge badge-primary">Public</span>
                                }
                                else
                                {
                                    <span class="badge badge-primary">NON-Public</span>
                                }
                            </td>
                            <td><img src="~/images/@Model.Thumb" style="width:50px;" /></td>
                            <td>@Html.DisplayFor(model => model.Icon)</td>
                            <td>@Html.DisplayFor(model => model.Cover)</td>
                        </tr>
                    </tbody>
                </table>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.CaId">Edit</a> |
                    <a asp-action="Index">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>
