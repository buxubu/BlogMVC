@model BlogMVC.Models.Role

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Details</h2>
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="normal-table-list mg-t-30">
            <div class="bsc-tbl-cls">
                <table class="table table-cl">
                    <thead>
                        <tr>
                            <th>ID Role</th>
                            <th>Role Name</th>
                            <th>Role Description</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Html.DisplayFor(model => model.RoleId)</td>
                            <td>@Html.DisplayFor(model => model.RoleName)</td>
                            <td>@Html.DisplayFor(model => model.RoleDescription)</td>
                        </tr>
                    </tbody>
                </table>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.RoleId">Edit</a> |
                    <a asp-action="Index">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>
